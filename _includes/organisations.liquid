<!-- ORGANISATIONS -->
<div class="mt-100 mb-100 organisations-earth">
    <div class="row">
        <div class="col-md-6 col-lg-3 col-12">
            <div class="organisations-earth-inner">
                <div class="organisations-img organisations-content">
                    {%- if include.heading -%}<h3>{{ include.heading }}</h3>{% endif %}
                    {%- if include.all -%}<a href="#">{{ include.all }}</a>{% endif %}
                </div>
            </div>
        </div>
        {% for organisation in site.data.organisations %}
            <div class="col-md-6 col-lg-3 col-6 {% if forloop.index > 3 %}organisations-hidden{%- endif -%}">
                <div class="organisations-earth-inner">
                    <div class="organisations-img">
                        {%- if organisation.image -%}<a href="{{ organisation.url }}"><img src="{{ organisation.image }}" alt="{{ organisation.name }}"></a>{% endif %}
                    </div>
                    <div class="organisations-dsc">
                        {%- if organisation.name -%}<h4>{{ organisation.name }}</h4>{% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
<!-- /ORGANISATIONS -->