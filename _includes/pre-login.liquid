{%- if include.data -%}
    {% assign data = page[include.data] %}
{% else %}
    {% assign data = page.pre-login %}
{% endif %}

{%- if data.buttons -%}
    {% assign buttons = " hero__content-buttons" %}
{% endif %}

<section class="pre-login">
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="pre-login-content">
                {%- if data.content -%}{{ data.content | markdownify }}{% endif %}
            </div>
        </div>
        <div class="col-12 col-lg-6">
            {%- if data.image -%}
                <figure class="pre-login-image"><img class="img-fluid" src="{{ data.image.src | prepend: site.path.images | relative_url }}" alt="{{ data.image.alt }}"></figure>
            {% endif %}
        </div>
    </div>
    {%- if data.more -%}
        <div class="row mt-5 mt-lg-4">
            {%- if data.more1 -%}
                <div class="col col-12 col-lg-6">
                    {{ data.more1 | markdownify }}
                </div>
            {% endif %}
            {%- if data.more2 -%}
                <div class="col col-12 col-lg-6">
                    {{ data.more2 | markdownify }}
                </div>
            {% endif %}
        </div>
        {%- if data.logos -%}
            <div class="logos pt-4 pt-md-3 pt-xl-5">
                <div class="row">
                    {% for logo in data.logos %}
                        <div class="col col-6 col-md-4 col-xl-2 mb-4 md-md-3 mb-xl-5">
                            <figure><img class="img-fluid" src="{{ logo.image }}" alt="{{ logo.title }}"></figure>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
        <div class="row pt-5">
            <div class="col col-12 col-xl-10 mx-auto text-center">
                {%- if data.more -%}
                    <div class="pre-login-more">
                        {{ data.more | markdownify }}
                    </div>
                {% endif %}
                {%- if data.buttons -%}
                    {% for button in data.buttons %}
                        <div class="text-center"><a href="{{ button.url }}" class="btn btn-primary mt-5 {{ button.class }}">{{ button.title }}</a></div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    {% endif %}
</section>