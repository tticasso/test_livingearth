            </div>
        </div>
    {% endif %}
    <div class="row justify-content-center">
        {% for box in site.data.continents %}
            <div class="col-6 col-md-3 col-lg-2 landscapes-catogories">
                <a href="{{ box.url }}"><img src="{{ box.icon }}" alt="{{ box.title }}"><span>{{ box.title }}</span></a>
            </div>
        {% endfor %}
    </div>
</div>
